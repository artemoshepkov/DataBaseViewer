<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="VisualDataBase.Views.TableTabItem">

  <Grid Grid.RowDefinitions="auto, *">
    <DockPanel Grid.Row="0">
      <Button Content="S" Command="{Binding }"/>
      <Button Content="+" Command="{Binding AddRecordCommand}"/>
      <Button Content="-"/>
    </DockPanel>

    <DataGrid Name="DataGridBases" Items="{Binding Content}" AutoGenerateColumns="True" Grid.Row="1">
    </DataGrid> 
    
  </Grid>
  
</UserControl>


