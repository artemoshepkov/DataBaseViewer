<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
             x:Class="VisualDataBase.Views.TableTabItem">

  <Grid Grid.RowDefinitions="auto, *">
    
    <DockPanel Grid.Row="0">
      <Button Content="S" IsVisible="{Binding IsStaticTable}" Command="{Binding SaveRecordsToDBCommand}"/>
      <Button Content="+" IsVisible="{Binding IsStaticTable}" Command="{Binding AddRecordCommand}"/>
      <Button Content="-" IsVisible="{Binding IsStaticTable}" Command="{Binding RemoveRecordCommand}" />
    </DockPanel>

      <DataGrid MaxHeight="475" Name="DataGridBases" Items="{Binding Content}" SelectedItem="{Binding CurrenItemDataGrid}" AutoGeneratingColumn="DeleteExcessColumns" AutoGenerateColumns="True" Grid.Row="1"/>       

  </Grid>
  
</UserControl>


